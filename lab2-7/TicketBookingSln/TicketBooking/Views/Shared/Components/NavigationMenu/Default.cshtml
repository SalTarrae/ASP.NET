@model TicketBooking.Models.ViewModels.NavigationMenuViewModel

<div class="list-group">
    <a class="list-group-item list-group-item-action @(Model.CurrentLocation == null ? "active" : "")"
       asp-controller="Home"
       asp-action="Index">
        Home
    </a>

    @foreach (var loc in Model.Locations) {
        <a class="list-group-item list-group-item-action @(loc == Model.CurrentLocation ? "active" : "")"
           asp-controller="Home"
           asp-action="Index"
           asp-route-location="@loc"
           asp-route-pageNum="1">
            @loc
        </a>
    }
</div>
