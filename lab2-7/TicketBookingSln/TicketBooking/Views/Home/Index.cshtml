@model TicketBooking.Models.ViewModels.EventsListViewModel

<div class="row">
    @foreach (var e in Model.Events ?? Enumerable.Empty<Event>()) {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@e.Title</h5>
                    <p class="card-text">@e.Description</p>

                    <ul class="list-unstyled mb-3">
                        <li><strong>Location:</strong> @e.Location</li>
                        <li><strong>Date:</strong> @e.StartDate.ToString("yyyy-MM-dd HH:mm")</li>
                    </ul>
                </div>

                <div class="card-footer text-end">
                    <span class="fw-bold">
                        @e.BaseTicketPrice.ToString("c")
                    </span>
                </div>
            </div>
        </div>
    }
</div>


<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">

        @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++) {
            <li class="page-item @(i == Model.PagingInfo.CurrentPage ? "active" : "")">
                <a class="page-link"
                   asp-controller="Home"
                   asp-action="Index"
                   asp-route-pageNum="@i">
                    @i
                </a>
            </li>
        }

    </ul>
</nav>