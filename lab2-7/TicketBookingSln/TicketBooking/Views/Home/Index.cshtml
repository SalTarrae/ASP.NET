@model TicketBooking.Models.ViewModels.EventsListViewModel

<div class="row">
    @foreach (var e in Model.Events ?? Enumerable.Empty<Event>()) {
        <partial name="_EventCard" model="e" />
    }
</div>


<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++) {
            <li class="page-item @(i == Model.PagingInfo.CurrentPage ? "active" : "")">
                <a class="page-link"
                   asp-controller="Home"
                   asp-action="Index"
                   asp-route-pageNum="@i"
                   asp-route-location="@Model.CurrentLocation">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>