@model IEnumerable<Event>

<h2>Events (Admin)</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create Event</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Location</th>
            <th>Date</th>
            <th class="text-end">Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model) {
            <tr>
                <td>@e.Title</td>
                <td>@e.Location</td>
                <td>@e.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td class="text-end">@e.BaseTicketPrice.ToString("c")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@e.EventId">Details</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@e.EventId">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@e.EventId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
