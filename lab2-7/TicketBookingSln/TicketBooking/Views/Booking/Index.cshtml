@model IEnumerable<Booking>

<h2>Bookings (Admin)</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create Booking</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Email</th>
            <th>Event</th>
            <th class="text-center">Qty</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model) {
            <tr>
                <td>@b.CustomerName</td>
                <td>@b.CustomerEmail</td>
                <td>@b.Event?.Title</td>
                <td class="text-center">@b.Quantity</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@b.BookingId">Details</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@b.BookingId">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@b.BookingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
